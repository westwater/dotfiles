#!/usr/bin/env zsh
# Linux-specific aliases (requires: apt install xclip)

# Clipboard (xclip)
alias jwtdp="xclip -selection clipboard -o | jwt -D"
alias uuid='uuidgen | tr "[:upper:]" "[:lower:]" | tee /dev/tty | xclip -selection clipboard'
alias cplc='fc -ln -1 | awk '\''{$1=$1}1'\'' ORS='\'''\'' | xclip -selection clipboard'
alias pwdcp='pwd | tr -d "\n" | xclip -selection clipboard'

# Time (GNU date uses -d)
alias time.now='TZ=UTC date +%FT%T'
alias time.5.mins.ago='TZ=UTC date -d "5 minutes ago" +%FT%T'
alias time.1hr.ago='TZ=UTC date -d "1 hour ago" +%FT%T'

# Linux open command
alias gopen='xdg-open http://$(git config --get remote.origin.url | sed -E "s/^git@//; s/.git//; s/\:/\//")'

# Linux screen
alias s="screen"
